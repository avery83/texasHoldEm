<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>pokerServlet</servlet-name>
    <servlet-class>poker.PokerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pokerServlet</servlet-name>
    <url-pattern>/pokerServlet</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>createPlayer</servlet-name>
        <servlet-class>poker.controller.CreatePlayer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createPlayer</servlet-name>
        <url-pattern>/createPlayer</url-pattern>
    </servlet-mapping>



    <security-constraint>
        <web-resource-collection>
            <web-resource-name>user</web-resource-name>
            <url-pattern>/pokerServlet</url-pattern>
            <url-pattern>/setupGame.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>administrator</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/login.jsp</form-login-page>
      <form-error-page>/loginFailure.jsp</form-error-page>
    </form-login-config>
  </login-config>




</web-app>
